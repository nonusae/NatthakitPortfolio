

<h1> Portfolio Items </h1>

<a href="portfolios/new">Create New Item</a>

<% @portfolio_items.each do |portfolio_item| %>
    <h3><%= link_to portfolio_item.title, portfolio_path(portfolio_item)  %></h3>
    <p><%= portfolio_item.subtitle %></p>
    <p><%= portfolio_item.body %></p>
    <%= image_tag portfolio_item.thumb_image if portfolio_item.thumb_image.present? %>
    <%= link_to "Edit", edit_portfolio_path(portfolio_item) %>

<% end %>
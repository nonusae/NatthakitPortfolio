<%= form_for(portfolio_item) do |form| %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, id: :portfolio_title %>
  </div>

  <div class="field">
    <%= form.label :subtitle %>
    <%= form.text_field :subtitle, id: :portfolio_subltitle %>
  </div>  

  <div class="field">
    <%= form.label :body %>
    <%= form.text_area :body, id: :portfolio_body %>
  </div>

  <ul>
    <%# this will loop and create <li>  for @portfolio_item.technologies.count %>
    <%= form.fields_for :technologies  do  |technology_form| %> 
      <li>
        <%=  technology_form.label :name %>
        <%=  technology_form.text_field :name %>
      </li>
    <% end %>
  </ul>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>